# alias for editing aliases
# alias a='vim $HOME/.zsh_files/aliases'
#
# # ls aliases
 alias ls='ls --sort=extension --color=auto -CF'
 alias ll='ls -l --sort=extension --color=auto'

# Make life better
 alias grep='grep -in --color'
 alias du='du -h'
 alias df='df -h'
 alias X='sudo'
 alias R='su -'
 alias duu='for t in files links directories; do echo `find . -maxdepth 1 -type ${t:0:1} | wc -l` $t; done 2> /dev/null'
# Arbit aliases
 alias e='vim'
 alias Z='clear'
 alias V='cd ~'
 alias cd.='cd ..'
 alias cd..='cd ..'

#pacaur

alias S='pacaur -Ss'
alias Sa='pacaur -Ssa'
alias Sr='pacaur -Ssr'
alias U='pacaur -Syu'
alias I='pacaur -S'

#pacman
alias OR='sudo pacman -Rns $(pacman -Qtdq)'
alias Rm='sudo pacman -Rns'

#youtube-dl
alias Y='youtube-dl -c -o "%(autonumber)s-%(title)s.%(ext)s" --autonumber-size 3'
alias Ys='youtube-dl -c -o "%(title)s.%(ext)s" --no-playlist'
