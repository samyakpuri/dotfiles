# Basic Binds
super + grave
    dmenuunicode
super + w
	brave
super + shift + w
    $TERMINAL -t nmtui -e nmtui
super + e
    $TERMINAL -t lf -e lf
super + i
	$TERMINAL -t htop -e htop
super + d
	dmenu_run -p 'Run: '
super + Return
	$TERMINAL
super + m
	$TERMINAL -t ncmpcpp -e ncmpcpp
super + v
	$TERMINAL -t visualizer -e ncmpcpp -s visualizer
super + x
	lockscreen
super + control + v
	dmenutv
super + shift + x
	prompt "Are you sure you want to shutdown?" "shutdown -h now"
super + F9
	dmenumount
super + F10
	dmenuumount

# #---Media Keys---# #

# For advancing forward/backward in an mpd song
super + bracketleft
	mediactrl back 10
super + shift + bracketleft
	mediactrl back 120
super + bracketright
	mediactrl forward 10
super + shift+ bracketright
	mediactrl forward 120

# For screenshots and recording
Print
	exec --no-startup-id scrot
shift + Print
	exec --no-startup-id scrot -u

# #---Extra XF86 Keys---# #
# These are the extra media keys that some keyboards have.
XF86AudioMute
	pamixer --allow-boost -t; pkill -RTMIN+10 i3blocks
{_,shift +, control + }XF86AudioLowerVolume
	pamixer --allow-boost -d {5,10,1}; pkill -RTMIN+10 i3blocks
{_,shift +, control + }XF86AudioRaiseVolume
	pamixer --allow-boost -i {5,10,1}; pkill -RTMIN+10 i3blocks
XF86PowerOff
	prompt "Are you sure you want to shutdown?" "shutdown -h now"
XF86Audio{Next,Prev,Play,Stop}
	mpc {next,prev,toggle,stop}
XF86Audio{Rewind,Forward}
	mpc seek {-,+} 10
XF86TouchpadToggle
	toggletouchpad
XF86Suspend
	lockscreen
XF86Display
	arandr
XF86MonBrightness{Up,Down}
	brightnessctl s {+5%,5%-}

